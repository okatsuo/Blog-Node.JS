{{/each}}
<h3>Editar cartegoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome da categoria"
                value="{{categoria.nome}}">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug da categoria"
                value="{{categoria.slug}}">
            <br>
            <button type=" submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>